<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".activity.ModifyActivity">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="#404040"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_return"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:text="返回"
            android:textColor="#fff"
            android:textSize="25sp" />
        <!-- 取消button自带阴影效果-->

        <Button

            android:id="@+id/btn_save"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"

            android:text="保存"
            android:textColor="#fff"
            android:textSize="25sp" />
        <!-- 取消button自带阴影效果-->

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_pic"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_margin="5dp"
        android:background="@drawable/text_frame_light"
        android:gravity="center"
        >

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_head_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:riv_oval="true"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_margin="2dp"
        android:background="@drawable/text_frame_gray"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="姓名"
            android:textSize="25sp"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            />
        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="草草草"
            android:textSize="25sp"
            android:textColor="#FFF"
            android:layout_marginLeft="10dp"
            android:paddingLeft="10dp"
            android:background="@drawable/text_frame_light"
            android:gravity="center_vertical"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_margin="2dp"
        android:background="@drawable/text_frame_gray"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="手机"
            android:textSize="25sp"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            />
        <EditText
            android:id="@+id/et_phonenum"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="123 1234 1234"
            android:textSize="25sp"
            android:textColor="#FFF"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:background="@drawable/text_frame_light"            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_margin="2dp"
        android:background="@drawable/text_frame_gray"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="邮箱"
            android:textSize="25sp"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            />
        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="123456789@cao.aom"
            android:textSize="25sp"
            android:textColor="#FFF"
            android:layout_marginLeft="10dp"
            android:paddingLeft="10dp"
            android:background="@drawable/text_frame_light"            android:gravity="center_vertical"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_margin="2dp"
        android:background="@drawable/text_frame_gray"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="亲密度"
            android:textSize="25sp"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            />
        <EditText
            android:id="@+id/et_love"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="100"
            android:textSize="25sp"
            android:textColor="#FFF"
            android:layout_marginLeft="10dp"
            android:paddingLeft="10dp"
            android:background="@drawable/text_frame_light"            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_margin="2dp"
        android:background="@drawable/text_frame_gray"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="通讯地址"
            android:textSize="25sp"
            android:textColor="#fff"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            />
        <EditText
            android:id="@+id/et_address"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="草泥马奔腾的草原"
            android:textSize="25sp"
            android:textColor="#FFF"
            android:layout_marginLeft="10dp"
            android:paddingLeft="10dp"
            android:background="@drawable/text_frame_light"            android:gravity="center_vertical"
            />
    </LinearLayout>


</LinearLayout>
